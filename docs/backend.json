
{
  "entities": {
    "UserAccount": {
      "title": "UserAccount",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "onboarded": { "type": "boolean" },
        "connectedApps": {
          "type": "object",
          "properties": {
            "grab": { "type": "boolean" },
            "gofood": { "type": "boolean" },
            "fitness": { "type": "boolean" }
          }
        }
      },
      "required": ["id", "email"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "properties": {
        "gender": { "type": "string", "enum": ["male", "female"] },
        "age": { "type": "number" },
        "weight": { "type": "number" },
        "height": { "type": "number" },
        "bmi": { "type": "number" },
        "bmiCategory": { "type": "string" },
        "dietaryRestrictions": { "type": "array", "items": { "type": "string" } },
        "allergies": { "type": "string" },
        "calorieTarget": { "type": "number" },
        "proteinTarget": { "type": "number", "description": "Target percentage of protein" },
        "carbsTarget": { "type": "number", "description": "Target percentage of carbs" },
        "fatTarget": { "type": "number", "description": "Target percentage of fat" }
      }
    },
    "DailyLog": {
      "title": "DailyLog",
      "type": "object",
      "properties": {
        "date": { "type": "string" },
        "caloriesConsumed": { "type": "number" },
        "caloriesBurned": { "type": "number" },
        "waterIntake": { "type": "number" }
      }
    },
    "Meal": {
      "title": "Meal",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "calories": { "type": "number" },
        "time": { "type": "string" },
        "source": { "type": "string", "enum": ["photo", "planner", "manual"] },
        "macros": {
          "type": "object",
          "properties": {
            "protein": { "type": "number" },
            "carbs": { "type": "number" },
            "fat": { "type": "number" }
          }
        },
        "imageUrl": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["google", "password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserAccount",
          "schema": { "$ref": "#/backend/entities/UserAccount" },
          "description": "Root user document"
        }
      },
      {
        "path": "/users/{userId}/profile/main",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "User physical profile"
        }
      },
      {
        "path": "/users/{userId}/dailyLogs/{dateId}",
        "definition": {
          "entityName": "DailyLog",
          "schema": { "$ref": "#/backend/entities/DailyLog" },
          "description": "Daily aggregates"
        }
      },
      {
        "path": "/users/{userId}/dailyLogs/{dateId}/meals/{mealId}",
        "definition": {
          "entityName": "Meal",
          "schema": { "$ref": "#/backend/entities/Meal" },
          "description": "Logged meals for the day"
        }
      }
    ]
  }
}
